<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}ModelShack{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
            <link rel="stylesheet" href="/modelshack/public/css/style.css">
            <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.0/css/all.css" integrity="sha384-OLYO0LymqQ+uHXELyx93kblK5YIS3B2ZfLGBmsJaUyor7CpMTBsahDHByqSuWW+q" crossorigin="anonymous">
        {% endblock %}
    </head>
    <body>

        <ul id="slide-out" class="sidenav sidenav-fixed">
            <li>
                <div class="user-view">
                    <div class="background" style="background-color: var(--main-color)"></div>
                    <div class="section">
                        <h5 class="white-text">ModelShack</h5>
                    </div>
                </div>
            </li>
            <li><a href="home">Home</a></li>
            <li><div class="divider"></div></li>
            <li><a href="upload"><i class="fas fa-upload fa-lg"></i>Upload</a></li>
            <li><a href="view"><i class="fas fa-cube fa-lg"></i>View</a></li>
            <li><a href="search"><i class="fas fa-search fa-lg"></i>Search</a></li>
        </ul>

        {% block body %}{% endblock %}
        {% block javascripts %}
            <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
        {% endblock %}
    </body>
</html>
